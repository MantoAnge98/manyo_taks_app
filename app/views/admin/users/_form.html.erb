<div class="container">
  <% if @user.errors.any? %> 
    <div id="error_explanation"  class="alert alert-danger" role="alert">> 
      <h4><%= pluralize(@user.errors.count, "erreurs") %> empêche(nt) <%= @user.name %> d'être sauvegardée(s):</h4> 
      <ul> 
        <% @user.errors.full_messages.each do |message| %> 
          <li><%= message %></li> 
        <% end %> 
      </ul> 
    </div> 
  <% end %> 
  <div class="row">
    <div class="col-3"></div>
    <div class="col-6">
      <div class="container">
      <%= form_with(model: [:admin, @user], local: true) do |f| %>
        <div class="field">
          <%= f.label :name %>
          <%= f.text_field :name, :class => 'form-control' %> 
        </div>

        <div class="field">
          <%= f.label :email %> 
          <%= f.email_field :email, :class => 'form-control' %> 
        </div>

        <div class="field form-group">
          <div class="checkbox-inline">
            <%= f.label :admin %> 
            <%= f.check_box :admin,{}, "true","false" %> 
          </div>
        </div>

        <div class="field">
          <%= f.label :password %> 
          <%= f.password_field :password,  :class => 'form-control'  %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %> 
          <%= f.password_field :password_confirmation, autocomplete: "email",  class: "form-control"  %> 
        </div>
        <hr>
        <div class="actions">
          <%= f.submit "Create Admin", class: "btn btn-secondary col-3" %> 
        </div>
        <hr>
        <%=link_to "User Login",new_session_path , class: "btn btn-secondary col-3" %>
      <% end %>
      </div>
    </div>
    <div class="col-3"></div>
  </div>
</div>