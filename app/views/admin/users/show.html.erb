<div class="row">
  
  <%if current_user.admin? %>
  <div class="col-12">
    <br>
      <h4>User's information Page</h4>
    <hr>
    <div class="row">
      <div class="col-2"></div>
      <div class="col-8">
        <%=link_to "Edit User",edit_admin_user_path(@user.id), :class=>"btn btn-secondary col-2" %> |
        <%=link_to "Logout",user_path(@user.id),method: :delete, data: { confirm: 'Are you sure?'} , :class=>"btn btn-danger col-2" %> |
        <%=link_to "User list",admin_users_path, :class=>"btn btn-primary col-2"%> |
        <%= link_to "Create new user", new_admin_user_path, :class=>"btn btn-success col-2" %>
      </div>
     
      <div class="col-2"></div>
    </div> 
    <hr>
  </div>
  <%end%>
</div>

  <table class="table">
    <thead class="thead-light">
      <tr>
        <th>Name</th>
        <th>Detail</th>
        <th>Deadline</th>
        <th>Priority</th>
        <th>Status</th>
      </tr>
    </thead>
    <% @task.each do |task| %>
    <tbody>
      <tr>
        <td class="task_row"><%= link_to "#{task.name}", task  %></td>
        <td><%= task.detail %></td>
        <td><%= task.deadline %></td>
        <td><%= task.priority %></td>
        <td><%= task.status %></td>
        <td>
          <%= link_to 'Edit Task', edit_task_path(task),:class=>"btn btn-secondary" %> |
          <%= link_to 'Delete Task', method: :delete, data: { confirm: 'Are you sure?' },:class=>"btn btn-danger" %>
        </td>
      </tr>
    </tbody> 
    <% end %>
  </table>
