<div class="container">
  <br>
  <h3>Edit Profile</h3>
</div>
<%= form_with(model:@user, local: true) do |f| %> 
  <% if @user.errors.any? %> 
    <div id="error_explanation"  class="alert alert-danger" role="alert">> 
      <h4><%= pluralize(@user.errors.count, "erreurs") %> empêche(nt) <%= @user.name %> d'être sauvegardée(s):</h4> 
      <ul> 
        <% @user.errors.full_messages.each do |message| %> 
          <li><%= message %></li> 
        <% end %> 
      </ul> 
    </div> 
  <% end %> 
  <div class="row">
    <div class="col-3"></div>
    <div class="col-6">
      <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name, :class => 'form-control' %> 
      </div>

      <div class="field">
        <%= f.label :email %> 
        <%= f.email_field :email, :class => 'form-control' %> 
      </div>

      <div class="field">
        <%= f.label :password %> 
        <%= f.password_field :password,  :class => 'form-control'  %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %> 
        <%= f.password_field :password_confirmation, autocomplete: "email",  class: "form-control"  %> 
      </div>
      <hr>
      <div class="actions">
        <%= f.submit "Update", class: "btn btn-success col-3" %> 
      </div>
      <hr>
      <%= link_to "Task List", tasks_path, class: "btn btn-primary col-3" %>
    </div>
    <div class="col-3"></div>
  </div>
<% end %> 
