<h3>Tasks List</h1>
<p><%= notice%></p>
<table>
    <tr>
        <!-- <th>title</th> -->
        <th>Names</th>
        <th>Details</th>
        <th>Action</th>
    </tr>
    <% @task.each do |task| %>
        <tr>
          <td><%= task.name %></td> 
          <td><%= task.detail %></td>
          <td>
            <%= link_to "See", task_path(task.id)%>  
            <%= link_to "Edit", edit_task_path(task.id)%>
            <%= link_to "Delete", task_path(task.id), method: :delete, data: {confirm: 'Are you sure?'}%> 
          </td>
        </tr>
    <% end %>
</table>
<br>
<%= link_to 'New  Task', new_task_path%>