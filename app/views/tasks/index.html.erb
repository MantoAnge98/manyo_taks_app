<h3 style="text-align:center">Tweet Lists</h1>
<p><%= notice%></p>
<table class="table" style="overflow:hidden;">
    <tr>
        <!-- <th>title</th> -->
        <th>content</th>
        <th>Action</th>
    </tr>
    <% @blogs.each do |blog| %>
        <tr>
         <!--   <td><%= blog.title %></td> -->
            <td style="width:400px;word-break: break-word;"><%= blog.content %></td>
            <td><%= link_to 'See', blog_path(blog.id) %></td>
            <td><%= link_to "Edit", edit_blog_path(blog.id)%></td>
            <td><%= link_to "Delete", blog_path(blog.id), method: :delete%></td>
        
        
        </tr>
    <% end %>
</table>
