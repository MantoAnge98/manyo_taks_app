<div class="row">
  <div class="col-12">
    <h1 class="mt-5">Confirmation page</h1>
    <div class="row">
      <div class="col-2"></div>
      <div class="col-8">
        <h3>Task insformation</h3>
          <%= form_with(model: @task, url: tasks_path, local: true) do |form| %> 
            <div class="row">
              <div class="col-12">
                <%= form.hidden_field :name %> 
                  <h4>Name:</h4>
                <%= @task.name %>
              </div>
              <div class="col-12">
                <%= form.hidden_field :detail %> 
                  <h4>Detail:</h4>
                <%= @task.detail %>  
              </div>
            </div>
            <hr>
            <%= form.submit  "Confirm", :class => "btn btn-success col-3" %> |
            <%= form.submit "Back", name: 'back', :class => "btn btn-secondary col-3" %>
          <% end %>
          <hr>
          <%= link_to "Task List", tasks_path, :class => "btn btn-primary col-4"  %>
      </div>
    </div>
  </div>
</div>



